<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.busan.orora.user.mapper.UserProfileImageMapper">
    <resultMap id="UserProfileImageResultMap" type="com.busan.orora.user.dto.UserProfileImageDto">
        <id property="id" column="id" />
        <result property="imgName" column="img_name" />
        <result property="oriImgName" column="ori_img_name" />
        <result property="userId" column="user_id" />
        <result property="imageUrl" column="image_url" />
        <result property="regTime" column="reg_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <select id="findImagesByUserId" resultMap="UserProfileImageResultMap" parameterType="Long">
        SELECT id, img_name, ori_img_name, user_id, image_url, reg_time, update_time
        FROM user_profile_images
        WHERE user_id = #{userId}
        ORDER BY reg_time DESC
    </select>

    <select id="findRepImageByUserId" resultMap="UserProfileImageResultMap" parameterType="Long">
        SELECT id, img_name, ori_img_name, user_id, image_url, reg_time, update_time
        FROM user_profile_images
        WHERE user_id = #{userId}
        ORDER BY reg_time DESC
        LIMIT 1
    </select>

    <insert id="insertImage" parameterType="com.busan.orora.user.dto.UserProfileImageDto">
        INSERT INTO user_profile_images (img_name, ori_img_name, user_id, image_url)
        VALUES (#{imgName}, #{oriImgName}, #{userId}, #{imageUrl})
    </insert>

    <delete id="deleteImage" parameterType="Long">
        DELETE FROM user_profile_images
        WHERE id = #{id}
    </delete>

    <delete id="deleteImagesByUserId" parameterType="Long">
        DELETE FROM user_profile_images
        WHERE user_id = #{userId}
    </delete>
</mapper>
