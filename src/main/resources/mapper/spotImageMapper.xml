<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.busan.orora.spot.mapper.SpotImageMapper">
    <resultMap id="SpotImageResultMap" type="com.busan.orora.spot.dto.SpotImageDto">
        <id property="id" column="id" />
        <result property="imgName" column="img_name" />
        <result property="oriImgName" column="ori_img_name" />
        <result property="touristSpotId" column="tourist_spot_id" />
        <result property="imageUrl" column="image_url" />
        <result property="repImgYn" column="rep_img_yn" />
        <result property="regTime" column="reg_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <select id="findImagesBySpotId" resultMap="SpotImageResultMap" parameterType="Long">
        SELECT id, img_name, ori_img_name, tourist_spot_id, image_url, rep_img_yn, reg_time, update_time
        FROM tourist_spot_images
        WHERE tourist_spot_id = #{spotId}
        ORDER BY rep_img_yn DESC, reg_time ASC
    </select>

    <insert id="insertImage" parameterType="com.busan.orora.spot.dto.SpotImageDto">
        INSERT INTO tourist_spot_images (img_name, ori_img_name, tourist_spot_id, image_url, rep_img_yn)
        VALUES (#{imgName}, #{oriImgName}, #{touristSpotId}, #{imageUrl}, #{repImgYn})
    </insert>

    <delete id="deleteImage" parameterType="Long">
        DELETE FROM tourist_spot_images
        WHERE id = #{id}
    </delete>

    <delete id="deleteImagesBySpotId" parameterType="Long">
        DELETE FROM tourist_spot_images
        WHERE tourist_spot_id = #{spotId}
    </delete>
</mapper>
